@model TreeStore.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<h2>Ürün Düzenle</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-2 col-md-offset-1">
                <div class="form-group">
                    <label asp-for="ImagePath" class="col-md-2 control-label">Ürün Resmi</label>
                    <div class="form-group" style="margin-left:920px;">
                        <img src="~/uploads/@Model.ImagePath" style="width:80px;height:80px;margin-left:-820px;" />
                    </div>
                </div>

            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DiscountPrice" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DiscountPrice" class="form-control" />
                <span asp-validation-for="DiscountPrice" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ImagePath" class="col-md-2 control-label">@Html.DisplayNameFor(model => model.ImagePath)</label>
            <div class="col-md-9">
                <div class="input-group">
                    <input asp-for="ImagePath" class="form-control" />
                    <span class="input-group-btn">
                        <a class="product ui-btn ui-btn_primary" id="uploadModal" type="button" onclick="browseMedia('ImagePath')">SEÇ</a>
                    </span>
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.ImagePath, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="IsActive" />
                    <label asp-for="IsActive"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CompanyLink" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CompanyLink" class="form-control" />
                <span asp-validation-for="CompanyLink" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SliderId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="SliderId" class="form-control" asp-items="ViewBag.SliderId"></select>
                <span asp-validation-for="SliderId" class="text-danger"></span>
            </div>
        </div>
    <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CreateDate" class="form-control" value="@Model.CreateDate" />
        <input type="hidden" asp-for="CreatedBy" class="form-control" value="@Model.CreatedBy" />
        @*<div class="form-group">
            <label asp-for="CreateDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CreateDate" class="form-control" readonly/>
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UpdateDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="UpdateDate" class="form-control" readonly/>
                <span asp-validation-for="UpdateDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CreatedBy" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CreatedBy" class="form-control" readonly/>
                <span asp-validation-for="CreatedBy" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UpdateBy" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="UpdateBy" class="form-control" readonly/>
                <span asp-validation-for="UpdateBy" class="text-danger"></span>
            </div>
        </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <a class="btn btn-default" asp-action="Index">Listeye Geri Dön</a>
</div>
@Html.Partial("_BrowseMedia", new ViewDataDictionary(this.ViewData) { { "element", "ImagePath" } })
