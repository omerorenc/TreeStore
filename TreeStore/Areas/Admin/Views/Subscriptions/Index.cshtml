@model IEnumerable<TreeStore.Models.Entities.Subscription>

@{
    ViewData["Title"] = "E-Bülten Aboneleri";
}

<h2>E-Bülten Aboneleri</h2>

<table class="table table-striped table-bordered table-hover" id="tblRecords">
    <thead>
        <tr>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.IsSubscribed)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.SubscriptionDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UnsubscriptionDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.IsConfirmed)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.ConfirmationDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.ConfirmationCode)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UpdateDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UpdateBy)
            </th>
            <th data-orderable="false" class="all">Eylemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsSubscribed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubscriptionDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnsubscriptionDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsConfirmed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConfirmationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConfirmationCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateBy)
                </td>
                <td class="text-nowrap">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                    <a class="btn btn-default" asp-action="Details" asp-route-id="@item.Id">Detaylar</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
