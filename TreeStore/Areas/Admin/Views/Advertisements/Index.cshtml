@model IEnumerable<TreeStore.Models.Entities.Advertisement>

@{
    ViewData["Title"] = "Reklamlar";
}

<h2>Reklamlar</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Reklam Ekle </a>
</p>
<table id="tblRecords" class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.AdvertisementType)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.AdvertisementLocation)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.AdvertisementUrl)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.AdvertisementImage)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.AdvertisementDescription)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.FinishDate)
            </th>
           
            <th data-orderable="false" class="dt-right all">Eylemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdvertisementType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdvertisementLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdvertisementUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdvertisementImage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdvertisementDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FinishDate)
                </td>
               
                <td class="text-nowrap">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                    <a class="btn btn-default" asp-action="Details" asp-route-id="@item.Id">Detaylar</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
