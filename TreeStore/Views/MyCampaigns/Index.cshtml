@model IEnumerable<TreeStore.Models.Campaign>

@{
    ViewData["Title"] = "Index";
}

<br />
<br />

<br />
<div class="row">
    <div class="col-md-1">
        
    </div>
    <div class="col-md-11">

    <div class="col-lg-12 col-md-12 col-sm-12">
      
        <p><a class="product ui-btn ui-btn_primary" asp-action="Create">Kampanya Ekle</a></p><br />
        <br />
        <div>
            @foreach (var item in Model)
            {
            <!--/.item-->
                <div class="item col-sm-3 col-lg-3 col-md-3 col-xs-6">
                    <div >
                        <div >

                            <a href="#">
                                <img src="~/uploads/6-2017/arcelik.jpg" alt="img" class="img-responsive" style="margin-top:10px;height:300px; width:290px;" />
                            </a>
                            <h3> @item.Name </h3>

                            <p>@item.Description</p>
                            <p>@item.Slogan</p>
                            <div>
                                <span class="label-wrap"><span class="label label-warning">NEW</span></span>
                                <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Detaylar</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                            </div>
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                        </div>
                      
                    </div>

                    <!--/.categoryProduct || product content end-->
                </div>
            }
            </div>
        </div></div>
    </div>



