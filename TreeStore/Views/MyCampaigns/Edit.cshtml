@model TreeStore.Models.Campaign

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-8 col-md-offset-1">
        <br />
        <br />
        <h2>Kampanya Düzenle</h2>
        <br />
        <br />
        <form asp-action="Edit">
            <div class="form-horizontal">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Description" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Slogan" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Slogan" class="form-control" />
                        <span asp-validation-for="Slogan" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="StartedDate" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="StartedDate" class="form-control" type="date" value="gg.aa.yy"/>
                        <span asp-validation-for="StartedDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="EndDate" class="form-control" type="date" value="gg.aa.yy"/>
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ImagePath" class="col-md-2 control-label">@Html.DisplayNameFor(model => model.ImagePath)</label>
                    <div class="col-md-9">
                        <div class="input-group">
                            <input asp-for="ImagePath" class="form-control" />
                            <span class="input-group-btn">
                                <a class="product ui-btn ui-btn_primary" id="uploadModal" onclick="browseMedia('ImagePath')">seç</a>
                            </span>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.ImagePath, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            <input asp-for="IsActive" />
                            <label asp-for="IsActive"></label>
                        </div>
                    </div>
                </div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Kaydet" class="product ui-btn ui-btn_primary" />&nbsp;&nbsp;&nbsp;
                        <a class="product ui-btn ui-btn_primary" asp-action="Index">Kampanyalar Listesine geri dön!</a>
                    </div>
                </div>
            </div>
        </form>

       
    </div>
</div>
@Html.Partial("_BrowseMedia", new ViewDataDictionary(this.ViewData) { { "element", "ImagePath" } })
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
