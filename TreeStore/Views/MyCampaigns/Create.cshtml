@model TreeStore.Models.Campaign

@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class="col-md-8 col-md-offset-1">
        <br />
        <br />
        <h2>Kampanya Ekle</h2>
        <br />
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-horizontal">
                <div class="row">
                    <div class="col-md-10">
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Description" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Slogan" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="Slogan" class="form-control" />
                                <span asp-validation-for="Slogan" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="StartedDate" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="StartedDate" class="form-control" />
                                <span asp-validation-for="StartedDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="EndDate" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="EndDate" class="form-control" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="ImagePath" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="ImagePath" class="form-control" />
                                <span asp-validation-for="ImagePath" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <div class="checkbox">
                                    <input asp-for="IsActive" />
                                    <label asp-for="IsActive"></label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Name" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="CreateDate" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="CreateDate" class="form-control" />
                                <span asp-validation-for="CreateDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="UpdateDate" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="UpdateDate" class="form-control" />
                                <span asp-validation-for="UpdateDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="CreatedBy" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="CreatedBy" class="form-control" />
                                <span asp-validation-for="CreatedBy" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="UpdateBy" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="UpdateBy" class="form-control" />
                                <span asp-validation-for="UpdateBy" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <a type="submit" class="product ui-btn ui-btn_primary">Kampanya Ekle</a>&nbsp;&nbsp;&nbsp;
                                <a class="product ui-btn ui-btn_primary" asp-action="Index">Kampanyalar Listesine geri dön!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </form>

</div>
    </div>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
