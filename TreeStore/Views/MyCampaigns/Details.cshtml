@model TreeStore.Models.Campaign

@{
    ViewData["Title"] = "Kampanya Detayları";
}


<!-- /.Fixed navbar  -->
<div class="container main-container headerOffset">


    <!-- left column -->
    <!-- product Image and Zoom -->

    <div class="col-md-5 col-md-offset-1">
        <div class="product-card__slider" id="image-block">
            <div >

                <div>

                    <img src="~/uploads/@Model.ImagePath" style="width:400px;height:350px;" />
                </div>
            </div>
        </div>
        <!-- end product-card__slider -->
    </div>

    <!--/ left column end -->
    <!-- right column -->
    <div class="col-lg-6 col-md-6 col-sm-6">
        <h1 class="product-title">
            @Html.DisplayFor(model => model.Name)
        </h1>

        <h1 class="product-code">@Html.DisplayFor(model => model.Slogan)</h1>
        <h1 class="product-code">@Html.DisplayFor(model => model.CategoryIds)</h1>

        <div class="product-price">

        </div>
        <div class="details-description">
            <p> </p>
        </div>
        <div class="product-tab w100 clearfix">


            <!-- Tab panes -->
            <div class="tab-content">
                <div class="tab-pane active" id="details">

                </div>
                <div class="tab-pane" id="size">
                    @Html.DisplayFor(model => model.Slogan)

                </div>
                <div class="tab-pane" id="shipping">

                </div>
            </div>
            <!-- /.tab content -->

        </div>
        <!--/.product-tab-->
        <hr />
        <div class="cart-actions">

            <div style="clear:both"></div>
            <div class="row">
                <div class="col-md-5">
                    <label asp-for="IsActive" class="control-label">Kampanya Aktif mi?</label>

                </div>
                <div class="col-md-7 col-md-pull-1">

                    <input style="width:25px;height:25px;" asp-for="IsActive" class="form-control" disabled />

                </div>
                <br />
                <br />
                <table style="font-size:15px;">
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.StartedDate)</td>
                        <td>:@Html.DisplayFor(model => model.StartedDate)</td>

                    </tr>
                    <br />
                    <br />
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.EndDate)</td>
                        <td>:@Html.DisplayFor(model => model.EndDate)</td>
                </table>
                <br />
                <br />
               

</div>




        </div>
        <!--/.cart-actions-->

        <div class="clear"></div>


        <div style="clear:both"></div>


        <div class="row">

            <div class="col-lg-12 col-md-10 col-sm-12 col-xs-12">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Kampanyayı Düzenle</a>
                <a class="btn btn-primary" asp-action="Index">Kampanya Listesine Geri Dön</a>
            </div>
        </div>
        <!--/.product-share-->

    </div>
    <!--/ right column end -->





</div>
<!--/.row-->


<div style="clear:both"></div>



<!-- /main-container -->


<div class="gap"></div>



