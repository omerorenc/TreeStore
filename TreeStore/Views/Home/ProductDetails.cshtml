@model TreeStore.Models.Product

@{
    ViewData["Title"] = "ProductDetails";
}
 <!-- Loader -->
<!-- Loader end -->

<div class="layout-theme animated-css" data-header="sticky" data-header-top="200">






    <div class="border-main">
        <div class="container">
            <div class="row">

                <!-- end col -->
            </div>
            <!-- end row -->


            <section class="product-card">
                <div class="row">

                    @{ var discount = (int)(100 - ((@Model.DiscountPrice * 100) / @Model.Price));}
                    <div class="promotion">
                        @{ if ((DateTime.Now.Day - Model.UpdateDate.Day) < 3)
                            {
                                <h5><span style="margin-left:240px;" class="label label-warning">Yeni-% @discount İNDİRİM</span> </h5>
                            }

                        }


                        <div class="col-md-4 col-md-offset-1">
                            <div class="product-card__slider" id="image-block">
                                <div class="slider-product flexslider">

                                    <ul class="slides">
                                        <li> <a href="~/uploads/@Model.ImagePath" class="prettyPhoto"> <img src="~/uploads/@Model.ImagePath" height="200" width="200" title="Foto" alt="img"> </a> </li>
                                        <li> <a href="~/uploads/@Model.ImagePath" class="prettyPhoto"> <img src="~/uploads/@Model.ImagePath" height="200" width="200" title="Foto" alt="img"> </a> </li>
                                        <li> <a href="~/uploads/@Model.ImagePath" class="prettyPhoto"> <img src="~/uploads/@Model.ImagePath" height="200" width="200" title="Foto" alt="img"> </a> </li>
                                        <li> <a href="~/uploads/@Model.ImagePath" class="prettyPhoto"> <img src="~/uploads/@Model.ImagePath" height="200" width="200" title="Foto" alt="img"> </a> </li>
                                    </ul>
                                </div>
                                <div class="carousel-product flexslider">
                                    <ul class="slides">
                                        <li> <img src="~/uploads/@Model.ImagePath" height="100" width="100" alt="img"> </li>
                                        <li> <img src="~/uploads/@Model.ImagePath" height="100" width="100" alt="img"> </li>
                                        <li> <img src="~/uploads/@Model.ImagePath" height="100" width="100" alt="img"> </li>
                                        <li> <img src="~/uploads/@Model.ImagePath" height="100" width="100" alt="img"> </li>
                                    </ul>
                                </div>
                            </div>
                            <!-- end product-card__slider -->
                        </div>

                        <div class="col-md-5">
                            <div class="product-card__main">
                                <h1 class="product-card__name">@Model.Name</h1>
                                <div class="product-card__category"><a href="#">@Model.Category.Name</a></div>
                                <br />
                                <br />
                                @{ if ((DateTime.Now.Day - Model.UpdateDate.Day) < 3)
                                    {
                                        <div class="product-card__availability"><i class="icon fa fa-check-circle"></i>Kampanya Dahilinde</div>
                                    }

                                }

                                <div class="product-card__price"> <span class="product-card__price-new">@Model.DiscountPrice ₺ </span> <span class="product-card__price-old">@Model.Price ₺</span> </div>
                                <div class="product-card__description">
                                    @Model.Description
                                </div>


                                <div class="row">

                                    <div class="col-lg-12 col-md-10 col-sm-12 col-xs-12">

                                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Ürün Düzenle</a>
                                        <a class="btn btn-primary" asp-action="Index">Ürün Listesine Geri Dön</a>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
                <!-- end row -->
            </section>
            <!-- end product-card -->




        </div>
        <!-- end #wrapper -->
    </div>
</div>
@section Scripts{
    <script src="/assets/plugins/isotope/jquery.isotope.min.js"></script>

}
<!-- end layout-theme -->
