<div class="row">
    <div class="col-xs-12">
        <section class="section-area section-about text-center">
            <h2 class="ui-title-block ui-title-block_large ui-title-block_mod-a">KAMPANYALAR</h2>
        </section>
    </div>
</div>
<div class="layout-theme animated-css" data-header="sticky" data-header-top="200">
    <div id="wrapper">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-area">
                            @foreach (var campaign in ViewBag.Campaigns)
                            {
                                <div class="col-md-3 col-md-offset-1">
                                    <ul class="Campaigns clearfix">
                                        <li class="isotope-item best Campaigns__item">
                                            <a style="width:auto;height:auto" class="products__foto"> <img src="~/uploads/@campaign.ImagePath" style="height:260px;width:260px" height="260" width="260" alt="Goods"> </a>
                                            <h4 class="products__name"><a href="#">@campaign.Name</a></h4>
                                            <div class="Campaigns__inner clearfix">
                                                <span class="Campaigns__price-new">@campaign.Slogan</span>
                                                <ul class="rating">
                                                    <li><i class="icon fa fa-star"></i></li>
                                                    <li><i class="icon fa fa-star"></i></li>
                                                    <li><i class="icon fa fa-star"></i></li>
                                                    <li><i class="icon fa fa-star"></i></li>
                                                    <li><i class="icon fa fa-star disabled"></i></li>
                                                </ul>
                                            </div>
                                            <div class="products__description">
                                                <p>@campaign.Description</p>
                                            </div>
                                        </li>
                                    </ul>
                                </div>

                            }
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>
