<div><span class="spinner"></span></div>
<div class="layout-theme animated-css" data-header="sticky" data-header-top="200">
    <div class="border-main">
        <div class="container">
            <section class="product-card">
                <div class="row">
                    <div class="col-md-8">
                        <main class="main-content">
                            <div class="wrap-title-page">
                                <h1 class="ui-title-page">@ViewBag.Campaigns.Slogan</h1>
                            </div>
                            <div class="list-posts list-posts_mod-b list-unstyled">
                                <article class="list-posts__article list-posts__article_mod-b clearfix">
                                    <img class="img-responsive" src="~/uploads/6-2017/@ViewBag.Campaigns.ImagePath" height="350" width="870" alt="Foto">
                                    <p class="text-justify">@ViewBag.Campaigns.Description</p>
                                </article>
                            </div>
                        </main>
                    </div>
                    <div class="col-md-1">

                    </div>
                    <div class="col-md-3">
                        <h1 class="product-card__name">@ViewBag.Campaigns.Name</h1>
                        <hr />
                        <p style="font-size:15px; color:green">Başlangıç Tarihi : @ViewBag.Campaigns.StartedDate</p>
                        <p style="font-size:15px; color:red">Bitiş Tarihi : @ViewBag.Campaigns.StartedDate</p>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
