@model TreeStore.Models.ApplicationUser

@{
    ViewData["Title"] = "Profilimi Düzenle";
}

<form asp-action="Edit">
    <div class="row">
        <div class="col-md-9 col-md-offset-1">
            <div class="form-horizontal">
                <br />
                <h4>Profilimi Düzenle</h4>
                <br />
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CompanyName" class="col-md-2 control-label">Firma Adı</label>
                    <div class="col-md-10">
                        <input asp-for="CompanyName" class="form-control" />
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CreatedDate" class="col-md-2 control-label">Oluşturulma Tarihi</label>
                    <div class="col-md-10">
                        <input asp-for="CreatedDate" class="form-control" readonly />
                        <span asp-validation-for="CreatedDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="UpdatedDate" class="col-md-2 control-label">Güncellenme Tarihi</label>
                    <div class="col-md-10">
                        <input asp-for="UpdatedDate" class="form-control" readonly />
                        <span asp-validation-for="UpdatedDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="col-md-2 control-label">Firma Adresi</label>
                    <div class="col-md-10">
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="col-md-2 control-label">Firma Telefonu</label>
                    <div class="col-md-10">
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Fax" class="col-md-2 control-label">Fax</label>
                    <div class="col-md-10">
                        <input asp-for="Fax" class="form-control" />
                        <span asp-validation-for="Fax" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Logo" class="col-md-2 control-label">@Html.DisplayNameFor(model => model.Logo)</label>
                    <div class="col-md-9">
                        <div class="input-group">
                            <input asp-for="Logo" class="form-control" readonly />
                            <span class="input-group-btn">
                                <a style="height:50px; width:50px;" class="product ui-btn ui-btn_primary" id="uploadModal" type="button" onclick="browseMedia('Logo')">Seç</a>
                            </span>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.Logo, "", new { @class = "text-danger" })
                </div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="UserName" class="col-md-2 control-label">Kullanıcı Adı</label>
                    <div class="col-md-10">
                        <input asp-for="UserName" class="form-control" readonly />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="NormalizedUserName" class="col-md-2 control-label">Normalize Kullanıcı Adı</label>
                    <div class="col-md-10">
                        <input asp-for="NormalizedUserName" class="form-control" readonly />
                        <span asp-validation-for="NormalizedUserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="col-md-2 control-label">E-Mail</label>
                    <div class="col-md-10">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="NormalizedEmail" class="col-md-2 control-label">Normalize E-Mail</label>
                    <div class="col-md-10">
                        <input asp-for="NormalizedEmail" class="form-control" readonly />
                        <span asp-validation-for="NormalizedEmail" class="text-danger"></span>
                    </div>
                </div>
