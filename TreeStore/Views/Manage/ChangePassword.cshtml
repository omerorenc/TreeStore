@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="row">
    <div class="col-md-9 col-md-offset-1">
        <form asp-controller="Manage" asp-action="ChangePassword" method="post" class="form-horizontal">
            <br />
            <h4>Şifre Değiştir</h4>
            <br />
            <hr />
            <div class="form-group">
                <label asp-for="OldPassword" class="col-md-2 control-label">Mevcut Şifre</label>
                <div class="col-md-10">
                    <input asp-for="OldPassword" class="form-control" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="col-md-2 control-label">Yeni Şifre</label>
                <div class="col-md-10">
                    <input asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="col-md-2 control-label">Yeni Şifre(Tekrar)</label>
                <div class="col-md-10">
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="product ui-btn ui-btn_primary">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-3">
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
