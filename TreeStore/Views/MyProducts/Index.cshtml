@model IEnumerable<TreeStore.Models.Product>

@{
    ViewData["Title"] = "Ürünler";
}
<link href="/metronic/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="/metronic/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" /><br />
<h2>Ürünler</h2>
<br/>
<p>
    <a class="btn btn-danger" asp-action="Create">Ürün Ekle</a>
</p>
<br />
<table class="table table-striped table-bordered table-hover" id="tblRecords">
    <thead>
        <tr>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.DiscountPrice)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CompanyLink)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UpdateDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UpdateBy)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th data-orderable="false" class="all">Eylemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiscountPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImagePath)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyLink)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td class="dt-right text-nowrap">
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Düzenle</a> |
                    <a asp-action="Details" class="btn btn-default" asp-route-id="@item.Id">Detaylar</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

