@model TreeStore.Models.Product

@{
    ViewData["Title"] = "Create";
}

        <div class="row">
             <div class="col-md-8 col-md-offset-1">
                <br />
                <br />
                <h2>Ürün Ekle</h2>
                <br />
                <form asp-action="Create">
                <div class="form-horizontal">
                 
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Price" class="form-control" type="number" min="0.00" max="10000.00" step="0.01" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="DiscountPrice" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="DiscountPrice" class="form-control" type="number" min="0.00" max="10000.00" step="0.01" />
                            <span asp-validation-for="DiscountPrice" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImagePath" class="col-md-2 control-label">@Html.DisplayNameFor(model => model.ImagePath)</label>
                        <div class="col-md-9">
                            <div class="input-group">
                                <input asp-for="ImagePath" class="form-control" />
                                <span class="input-group-btn">
                                    <a class="product ui-btn ui-btn_primary" id="uploadModal" type="button" onclick="browseMedia('ImagePath')">Seç</a>
                                </span>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.ImagePath, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">
                                <input asp-for="IsActive" />
                                <label asp-for="IsActive"></label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="CompanyLink" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="CompanyLink" class="form-control" />
                            <span asp-validation-for="CompanyLink" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryId" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="SliderId" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <select asp-for="SliderId" class="form-control" asp-items="ViewBag.SliderId"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="CreateDate" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="CreateDate" class="form-control" />
                            <span asp-validation-for="CreateDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="UpdateDate" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="UpdateDate" class="form-control" />
                            <span asp-validation-for="UpdateDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="CreatedBy" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="CreatedBy" class="form-control" />
                            <span asp-validation-for="CreatedBy" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="UpdateBy" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="UpdateBy" class="form-control" />
                            <span asp-validation-for="UpdateBy" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Ürün Ekle" class="product ui-btn ui-btn_primary" />&nbsp;&nbsp;&nbsp;
                            <a class="product ui-btn ui-btn_primary" asp-action="Index">Ürünler Listesine geri dön!</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

            @Html.Partial("_BrowseMedia", new ViewDataDictionary(this.ViewData) { { "element", "ImagePath" } })
            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
